apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: argo-cd
  namespace: tools-argo
  finalizers:
    - resources-finalizer.argocd.argoproj.io
  annotations:
    argocd.argoproj.io/sync-wave: "5000"
spec:
  project: tools
  destination:
    namespace: tools-argo
    server: https://kubernetes.default.svc
  source:
    helm:
      version: v3
      valueFiles:
      - values-patch.yaml
      releaseName: abhra
    path: argo-cd
    repoURL: https://github.com/wescale/abhra-catherine
    targetRevision: HEAD
  syncPolicy:
    automated:
      selfHeal: true
      prune: true
    syncOptions:
    - CreateNamespace=true
    - ApplyOutOfSyncOnly=true

